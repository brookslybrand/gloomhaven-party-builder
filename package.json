{
  "private": true,
  "name": "remix-app-template",
  "description": "",
  "license": "",
  "scripts": {
    "watch:css": "NODE_ENV=development postcss ./app/styles/tailwind.css -o ./app/styles/app.css -w",
    "build:css": "NODE_ENV=production postcss ./app/styles/tailwind.css -o ./app/styles/app.css",
    "predev": "prisma generate && touch ./app/styles/app.css",
    "remix:dev": "remix dev",
    "dev": "npm-run-all --parallel watch:css start remix:dev",
    "prebuild": "prisma generate && npm run build:css",
    "build": "remix build",
    "start": "vercel dev",
    "deploy": "npm run build && vercel deploy --prod",
    "lint": "eslint --ignore-path .gitignore --ext .js,.ts,.tsx ."
  },
  "dependencies": {
    "@prisma/client": "^2.24.1",
    "@remix-run/react": "^0.17.5",
    "@remix-run/vercel": "^0.17.5",
    "@vercel/node": "^1.8.3",
    "clsx": "^1.1.1",
    "prettier": "^2.3.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router-dom": "^6.0.0-beta.0",
    "remix": "^0.17.5"
  },
  "devDependencies": {
    "@remix-run/dev": "^0.17.5",
    "@types/node": "^15.12.2",
    "@types/react": "^17.0.4",
    "@types/react-dom": "^17.0.4",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "autoprefixer": "^10.2.6",
    "eslint": "^7.19.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-config-standard-react": "^11.0.1",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.1",
    "postcss-cli": "^8.3.1",
    "prisma": "^2.24.1",
    "tailwindcss": "^2.1.4",
    "ts-node": "^8.9.1",
    "typescript": "^4.3.2",
    "vercel": "^23.0.0"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
